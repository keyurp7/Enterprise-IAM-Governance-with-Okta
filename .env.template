# Enterprise IAM Platform Configuration Template
# Copy this file to .env and update with your actual values

# Okta Configuration
OKTA_DOMAIN=your-domain.okta.com
OKTA_API_TOKEN=your_api_token_here
OKTA_CLIENT_ID=your_client_id
OKTA_CLIENT_SECRET=your_client_secret

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/iam_platform
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Integrations
SLACK_WEBHOOK_URL=your_slack_webhook_url
SPLUNK_HEC_TOKEN=your_splunk_token
SPLUNK_HEC_URL=https://your-splunk-instance:8088/services/collector

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production
WEB_CONCURRENCY=4
PORT=8000

# Monitoring & Alerting
MONITORING_ENABLED=true
ALERT_EMAIL=admin@yourcompany.com
SMTP_SERVER=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# Compliance & Audit
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_REPORTS_ENABLED=true
SOX_COMPLIANCE=true
PCI_COMPLIANCE=true